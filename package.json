{
  "name": "angular4-package-boilerplate",
  "version": "0.0.1",
  "description": "Angular 4 NPM package boilerplate",
  "main": "index.js",
  "scripts": {
    "transpile": "ngc",
    "package": "rollup -c",
    "minify": "uglifyjs dist/bundles/ng4npmboilerplate.umd.js --screw-ie8 --compress --mangle --comments --output dist/bundles/ng4npmboilerplate.umd.min.js",
    "build": "npm run transpile && npm run package && npm run minify"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:smeyerSL/angular4-package-boilerplate.git"
  },
  "author": "smeyerSL",
  "license": "MIT",
  "dependencies": {
    "@angular/core": "^4.3.6",
    "@angular/common": "^4.3.6",
    "rxjs": "^5.4.3"
  },
  "devDependencies": {
    "@angular/compiler": "^4.3.6",
    "@angular/compiler-cli": "^4.3.6",
    "rollup": "^0.49.2",
    "typescript": "^2.5.2",
    "uglify-js": "^3.0.28"
  }
}
